@model Producto
@{
    ViewData["Title"] = "Crear Nuevo Producto";
}

<div class="page-header">
    <h2>Crear Nuevo Producto</h2>
    <a asp-action="Index" class="btn btn-secondary">← Volver a la Lista</a>
</div>

<form asp-action="Create" method="post" class="product-form">
    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
    
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" placeholder="Ej: Laptop Dell" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control" rows="4" placeholder="Descripción del producto"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="Precio"></label>
            <input asp-for="Precio" type="number" step="0.01" class="form-control" placeholder="0.00" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Stock"></label>
            <input asp-for="Stock" type="number" class="form-control" placeholder="0" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Crear Producto</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

